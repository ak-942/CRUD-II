<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company Employee Portal</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
            margin-top: 20px;
        }

        .navbar {
            margin-bottom: 20px;
        }

        .footer {
            background-color: #343a40;
            color: #ffffff;
            padding: 5px 0;
            text-align: left;
            position: relative;
            bottom: 0;
            width: 100%;
            font-size: 0.8rem;
        }

            .footer p {
                margin: 2px;
            }

        .card {
            margin-top: 20px;
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .card-header {
            background-color: #007bff;
            color: #ffffff;
        }

        .table thead th {
            background-color: #343a40;
            color: #ffffff;
        }

        .btn-group .btn {
            margin: 2px;
        }

        .col-empname {
            width: 100px;
        }

        .col-empcode {
            width: 100px;
        }

        .col-joiningdate,
        .col-dob {
            white-space: nowrap;
            width: 150px;
        }

        .col-mobile {
            width: 150px;
        }

        .col-aadhaar {
            width: 150px;
        }

        .col-presentaddress {
            width: 150px;
        }

        .col-school {
            width: 100px;
        }

        .col-college {
            width: 100px;
        }

        .col-highereducation {
            width: 150px;
        }

        .col-actions {
            width: 150px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Company Employee Portal</a>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 XYZ. All rights reserved.</p>
            <p>Contact us: xyz@company.com | +91 9827370182</p>
            <p>Address: Patia, Bhubanehswar</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // Smooth scrolling for internal links
            $('a[href*="#"]:not([href="#"])').click(function () {
                if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                    var target = $(this.hash);
                    target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                    if (target.length) {
                        $('html, body').animate({
                            scrollTop: target.offset().top
                        }, 1000);
                        return false;
                    }
                }
            });

            // Dynamic button interactions
            $('.btn').hover(
                function () {
                    $(this).addClass('btn-lg btn-info');
                }, function () {
                    $(this).removeClass('btn-lg btn-info');
                }
            );

            // Button click effect
            $('.btn').on('click', function () {
                $(this).addClass('btn-clicked');
                setTimeout(() => {
                    $(this).removeClass('btn-clicked');
                }, 200);
            });
        });
    </script>
    <style>
        .btn-clicked {
            background-color: #0056b3;
            color: #fff;
        }
    </style>
    @RenderSection("Scripts", required: false)
</body>
</html>
